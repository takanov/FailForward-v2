<h1>失敗ログタイムライン</h1>

<%= link_to '新しい失敗を投稿する', new_failure_path %>

<% @failures.each do |failure| %>
  <div>
    <h3><%= failure.user.name %></h3>
    <p><%= failure.content %></p>
    <small><%= failure.created_at.strftime("%Y-%m-%d %H:%M") %></small>
    <%= link_to '削除', @failure, method: :delete, data: { confirm: '本当に削除しますか？' } %>
  </div>
  <hr>
<% end %>